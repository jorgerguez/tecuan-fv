---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card color="whitesmoke">
    <div class='flex justify-between items-start'>
      <h2 class='text-xl md:text-3xl lg:text-5xl mb-8 dm-serif'>
        Últimos artículos agregados
      </h2>
      <div class='hidden md:block'>
        <Button href='/blog/'>Catálogo completo &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/blog/'>Ver catálogo</Button>
      </div>
    </div>
    <BlogList posts={posts} />
  </Card>
</section>
