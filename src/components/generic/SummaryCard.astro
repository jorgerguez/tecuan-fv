---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
  price: string;
}

const { title, imgAlt, imgSrc, price, description } = Astro.props;
---

<Card color='white'>
  <div class='rounded-lg border-3 border-black my-4 h-56'>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class='rounded h-full w-full object-cover'
    />
  </div>
  <h3 class='poppins text-lg md:text-xl'>{title}</h3>
  <p class='poppins'>{price}</p>
  <slot />
</Card>
