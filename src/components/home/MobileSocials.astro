  {
    name: 'Instagram',
    url: 'https://instagram.com/tecuan.hobbies',
    icon: 'i-uil-instagram',
  },
  {
    name: 'Facebook',
    url: 'https://www.facebook.com/tecuan.hobbies',
    icon: 'i-uil-facebook',
  },
  {
    name: 'WhatsApp',
    url: 'https://whatsapp.com/channel/0029Va9G9Vz7oQheIgaS0Z2c',
